    <h3>{{post.user.username}}'s Post:</h3>
    <p>{{#format_date post.date_created}}{{/format_date}}</p>
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
        <p>{{post.body}}</p>
      </div>
    </div>

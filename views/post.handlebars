{{#if comments.length}}
  <div class="col-md-6 project-list comments">
    <h3>Current comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{comment.user.username}}</h4>
        <p>{{#format_date comment.date_created}}{{/format_date}}</p>
        <p>{{comment.body}}</p>
      </div>
      <div class="col-md-4">
     <button class="btn btn-sm btn-danger" id = "delete-btn" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Comment:</h3>

    <form class="form new-project-form">


      <div class="form-group">
        <label for="project-desc">Comment:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" data-id="{{post.id}}" id="submit-btn" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
<script src="/js/post.js"></script>

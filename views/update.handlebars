

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update Your Post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Post Title:</label>
        <p>{{post.title}}</p>
        <input class="form-input" type="text" id="project-name" name="project-name" placeholder="New Title Here" />
      </div>

      <div class="form-group">
        <label for="project-desc">Post Body:</label>
        <p>{{post.body}}</p>
        <textarea class="form-input" id="project-desc" name="project-desc" placeholder="New Post Here"></textarea>
      </div>
      <div class="form-group">
                <button class="btn btn-sm" id="update-btn" data-id="{{post.id}}">UPDATE</button>
      </div>
    </form>
  </div>
  <script src="/js/update.js"></script>